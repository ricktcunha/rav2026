rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para a coleção de participantes
    match /participants/{document=**} {
      // Permite leitura pública
      allow read: if true;
      // Permite escrita pública (ajuste conforme necessário para produção)
      allow write: if true;
    }
  }
}

